source "https://rubygems.org"
ruby "~> 3"

# standard is something that uses inherit_gems; any other option would work
gem "standard", "1.37.0"
# any gem with a git dependency works; I picked this one at random from another project
gem "robotstxt-parser", require: "robotstxt", git: "https://github.com/instrumentl/robotstxt-parser.git", ref: "11ef2963a995585ab4ed7a98c7fd0bba0576a35e"
